# WhatsApp Business Platform - Environment Configuration
# Copy this file to .env and fill in your values

# ==================== META/FACEBOOK CONFIGURATION ====================

# Facebook App Configuration (from developers.facebook.com)
META_APP_ID=your_facebook_app_id
META_APP_SECRET=your_facebook_app_secret

# Embedded Signup Configuration ID
META_EMBEDDED_SIGNUP_CONFIG_ID=your_embedded_signup_config_id

# Webhook Configuration
META_WEBHOOK_VERIFY_TOKEN=your_custom_verify_token

# API Version
META_API_VERSION=v24.0

# Default WABA Configuration (fallback, usually obtained via embedded signup)
META_WABA_ID=your_waba_id
META_PHONE_NUMBER_ID=your_phone_number_id
META_ACCESS_TOKEN=your_access_token

# OAuth Redirect URI
META_REDIRECT_URI=https://your-domain.com/auth/facebook/callback

# ==================== KAFKA CONFIGURATION ====================

KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=whatsapp-platform
KAFKA_GROUP_ID=whatsapp-message-processor

# ==================== DATABASE CONFIGURATION ====================

# PostgreSQL (for Kafka service)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=whatsapp_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password

# MySQL (for other services)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=whatsapp_platform
DB_USER=root
DB_PASSWORD=your_password

# ==================== REDIS CONFIGURATION ====================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================== SERVICE PORTS ====================

USER_SERVICE_PORT=3000
CONTACT_SERVICE_PORT=3002
CAMPAIGN_SERVICE_PORT=3003
TEMPLATE_SERVICE_PORT=3004
TEAM_SERVICE_PORT=3005
WHATSAPP_SERVICE_PORT=3006
KAFKA_SERVICE_PORT=3007

# ==================== SERVICE URLs (for inter-service communication) ====================

USER_SERVICE_URL=http://localhost:3000
CONTACT_SERVICE_URL=http://localhost:3002
CAMPAIGN_SERVICE_URL=http://localhost:3003
TEMPLATE_SERVICE_URL=http://localhost:3004
TEAM_SERVICE_URL=http://localhost:3005
WHATSAPP_SERVICE_URL=http://localhost:3006
KAFKA_SERVICE_URL=http://localhost:3007

# ==================== JWT CONFIGURATION ====================

JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Internal API Key for service-to-service communication
INTERNAL_API_KEY=your_internal_api_key

# ==================== RATE LIMITING ====================

# Messages per second per phone number
RATE_LIMIT_MESSAGES_PER_SECOND=80

# Seconds between messages to same recipient
RATE_LIMIT_PAIR_COOLDOWN=6

# Maximum retry attempts for failed messages
MAX_RETRY_ATTEMPTS=5

# ==================== LOGGING ====================

LOG_LEVEL=info
NODE_ENV=development

# ==================== FRONTEND CONFIGURATION ====================

# Next.js
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_META_APP_ID=your_facebook_app_id
